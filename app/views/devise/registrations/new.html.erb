<body class="container login">
  <div class="login-bg">
    <div class="login-template">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="login-form-inputs">
          <%= f.input :email, autofocus: true,label: false,placeholder:"Enter email" %>
          <%= f.input :name, autofocus: true,label: false,placeholder:"Enter name" %>
          <%= f.input :team_id, required: true, autofocus: true,label: false,placeholder:"Enter teamid" %>
          <%= f.input :password,placeholder:"Enter password", required: true,label: false %>
          <%= f.input :password_confirmation,placeholder:"Enter password again",label: false, required: true %>
        </div>
        <%= render "devise/shared/links" %>
        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>

    </div>
  </div>
