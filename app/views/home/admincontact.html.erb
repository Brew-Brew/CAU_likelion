<section class="contact-logo">
  <p class="contact-title" style="color: #ff7f00">We're</p>
  <p class="contact-title">______</p>
  <p class="contact-title" style="color: #FFBF00">Lion</p>
</section>
<div class="app-template">

  <table class="table table-hover">
    <thead class="bg-gray-dark">
      <tr>
        <th colspan="1" >Num</th>
        <th colspan="1" >작성자 email</th>
        <th colspan="1">내용</th>
      </tr>
    </thead>
    <tbody>
      <% if @contact.empty? %>
        <p>글이 없습니다.</p>
      <% else %>
        <tr>
      <% @contact.each do |contact| %>
            <th scope="row"><%= contact.id %></th>
            <td><%= contact.email %></td>
            <td><a href="/contact/admincshow/<%= contact.id%>"><%= contact.content %> </a></td>
        </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
