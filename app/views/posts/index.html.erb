<p id="notice"><%= notice %></p>

<h1><%=@teamid%>팀의 스터디방</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3" style="text-align: center">제목</th>
      <th colspan="3">내용</th>
    </tr>
  </thead>

  <tbody>
    <% if @posts.empty? %>
      <p>글이 없습니다.</p>
    <% else %>
          <tr>
    <% @posts.each do |post| %>

        <th scope="row">1</th>
        <td><%=post.title%></td>
        <td><%= link_to 'Show', post_path(@teamid,post) %></td>
        <td><%= link_to 'Edit', edit_post_path(@teamid,post) %></td>
        <td><%= link_to 'Destroy', destroy_path(@teamid,post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
    <% end %>
  </tbody>
</table>

<br>

